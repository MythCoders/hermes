- page_title @client.name, 'Client'

= form_for @client, url: clients_path do |f|
  .card
    %h5.card-header.bg-primary.text-white
      = fa_solid 'users'
      = @client.name
    .card-body
      %dl
        %dt Owner
        %dd= @client.owner
        %dt Reroute Email
        %dd= @client.reroute_email
        %dt API Key
        %dd= @client.api_key
        %dt API Secret
        %dd= @client.api_secret
        %dt= t('helpers.label.client.is_active')
        %dd= @client.is_active
        %dt= t('helpers.label.client.are_emails_sent')
        %dd= @client.are_emails_sent
    .card-footer
      = link_to 'Cancel', clients_path, class: 'btn btn-outline-primary'
      = link_to 'Edit', edit_client_path(@client), class: 'btn btn-primary'
